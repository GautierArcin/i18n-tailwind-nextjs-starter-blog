{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/layouts/*": ["layouts/*"],
      "@/lib/*": ["lib/*"],
      "@/css/*": ["css/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2019",
    "allowJs": true,
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "components",
    "layouts",
    "lib",
    "pages",
    "scripts",
    "next-env.d.ts",
    "next.config.js",
    "prettier.config.js",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
